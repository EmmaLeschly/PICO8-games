followcirc={
    spd=1,
    radius=37,
    originx=60,
    originy=70,
    angle=0,
    update=function(self)
        self.angle+=self.spd
        if(self.angle>360) then
            self.angle=0
        end
        x=self.originx+
            self.radius*
            cos(self.angle/360)
        y=self.originy+
            self.radius*
            sin(self.angle/360)
    end,
    draw=function(self)
        cls()
        spr(1,x,y)
        rect(0,0,127,127,7)
    end
}
