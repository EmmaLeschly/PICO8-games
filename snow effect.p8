function _init()
 snow={}
 warp=3
 g=.05
 d=0
end

function _update()
 while count(snow)<100 do
  for s in all(snow) do
   s={
    vx=0,
    vy=0,
    x=rnd(128),
    y=-1*rnd(130),
   }
  add(snow,s)
  end
 end

 d+=.05
 if d>1 then
  d=-1
 end
 
 for s in all(snow) do
  s.vx=rnd(d)
  s.vy+=g
  s.y+=s.vy
  s.x+=s.vx
  if s.y>128 then
   del(snow,s)
   
  end
 end
end

function _draw()
 cls()
 for s in all(snow) do
  pset(s.x,s.y,7)
 end
end
